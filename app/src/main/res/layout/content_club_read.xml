<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_club_read"
    tools:context="com.example.administrator.hanmadang.Tab.Club.ClubReadActivity">

    // 제목
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:text="제목 "
            android:textColor="#ff222222"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title"
            android:layout_alignBaseline="@id/title"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/write_borderLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/titleLayout"
        android:background="#a9a9a9"
        android:layout_marginTop="3dp"
        />

    // 작성자
    <RelativeLayout
        android:id="@+id/writerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/write_borderLine"
        android:padding="10dp">
        <TextView
            android:id="@+id/writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:text="작성자 "
            android:textColor="#ff222222"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/inputWriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/writer"
            android:layout_alignBaseline="@id/writer"
            android:layout_marginLeft="7dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/write_borderLine2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/writerLayout"
        android:background="#a9a9a9"
        android:layout_marginTop="3dp"
        />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/writerLayout"
        android:padding="10dp">

        <TextView
            android:id="@+id/content"
            android:lines="18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/write_borderLine3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/contentLayout"
        android:background="#a9a9a9"
        android:layout_marginTop="3dp"
        />

    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/write_borderLine3"
        android:layout_centerHorizontal="true"
        android:padding="10dp">

        <Button
            android:id="@+id/okButton"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
</RelativeLayout>
