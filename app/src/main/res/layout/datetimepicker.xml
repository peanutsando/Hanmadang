<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".Tab.DateTimePicker"
	android:fillViewport="false">

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:gravity="center"
		>

		<TimePicker
			android:id="@+id/timePicker"
			android:layout_marginTop="10dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:theme="@style/timePickerTheme"
			android:layout_centerHorizontal="true" />

		<!--왼쪽에 이미지 넣기-->
		<EditText
			android:id="@+id/editTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/timePicker"
			android:layout_alignBottom="@+id/schedule"
			android:hint="일정을 입력하세요"
			android:cursorVisible="true"
			android:layout_toEndOf="@+id/schedule" />

		<EditText
			android:id="@+id/editPlace"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/editTitle"
			android:hint="장소"
			android:cursorVisible="true"
			android:layout_toEndOf="@+id/schedule" />

		<EditText
			android:id="@+id/editContent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/editPlace"
			android:hint="설명"
			android:cursorVisible="true"
			android:inputType="text"
			android:layout_toEndOf="@+id/schedule" />

		<DatePicker
			android:id="@+id/datePicker"
			android:layout_marginTop="10dp"
			android:calendarViewShown="false"
			android:layout_below="@id/editContent"
			android:layout_width="wrap_content"
			android:layout_height="0dp" />

		<Button
			android:id="@+id/addButton"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/editContent"
			android:layout_marginLeft="60dp"
			android:layout_marginTop="16dp"
			android:drawableLeft="@drawable/ok_btn"
			android:text="추가"
			/>

		<Button
			android:id="@+id/cancelButton"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/editContent"
			android:layout_toRightOf="@id/addButton"
			android:layout_marginLeft="60dp"
			android:layout_marginTop="16dp"
			android:drawableLeft="@drawable/cancel_btn"
			android:text="취소"
			android:layout_alignParentEnd="false"
			android:layout_alignParentStart="false" />

	</RelativeLayout>
</ScrollView>